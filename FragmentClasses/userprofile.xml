<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/admin_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Details"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#6B6B6B"
        tools:ignore="MissingConstraints"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cerdential_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cerdential_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cerdential_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cerdential_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@id/cerdential_top"
        app:layout_constraintBottom_toBottomOf="@+id/cerdential_bottom"
        app:layout_constraintLeft_toLeftOf="@+id/cerdential_left"
        app:layout_constraintRight_toRightOf="@id/cerdential_right">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Staff ID:"
            android:textSize="30sp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="#707070" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="12345"
        android:textColor="#707070"
        android:singleLine="true"
        android:textSize="30sp"
        android:layout_weight="0.5"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="#707070"
            android:text="Password:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="0.5"
            android:textColor="#707070"
            android:text="123abc"/>


    </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/img_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"/>


    <TextView
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="@drawable/color_b"
        android:gravity="center"
        android:text="Update"
        android:textColor="#707070"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@id/img_right"
        app:layout_constraintStart_toEndOf="@id/img_left"
        app:layout_constraintTop_toBottomOf="@id/img_top"
        app:layout_constraintBottom_toBottomOf="@id/img_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.95" />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/round_corner"
        app:layout_constraintTop_toBottomOf="@id/top_image"
        app:layout_constraintBottom_toTopOf="@id/bottom_image"
        app:layout_constraintStart_toEndOf="@id/left_image"
        app:layout_constraintEnd_toStartOf="@id/right_image"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New Pass:"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="#707070" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="New pass"
                android:textColor="#707070"
                android:singleLine="true"
                android:textSize="30sp"
                android:layout_weight="0.5"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="#707070"
                android:text="Old Pass:" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:layout_weight="0.5"
                android:textColor="#707070"
                android:text="Old Pass"/>

    </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.75" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.70" />

    <TextView
    android:id="@+id/confirm_button"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:gravity="center"
    android:textColor="#707070"
    android:textSize="32sp"
    android:text="Confrim"
        android:background="@drawable/color_b"
    app:layout_constraintBottom_toBottomOf="@id/bottom"
    app:layout_constraintEnd_toStartOf="@id/right"
    app:layout_constraintStart_toEndOf="@id/left"
    app:layout_constraintTop_toBottomOf="@id/top" />
</androidx.constraintlayout.widget.ConstraintLayout>
