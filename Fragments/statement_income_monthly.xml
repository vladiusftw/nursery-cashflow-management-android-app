<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="From:"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/month_dropdown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/month_dropdown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dropdown_shape"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/year_dropdown"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/from_text"
        app:layout_constraintBottom_toTopOf="@+id/from_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/year_dropdown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dropdown_shape"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/month_dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/from_bottom"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/from_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generate_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generate_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generate_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generate_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_click_color"
        android:text="Generate"
        android:textSize="22sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/generate_top"
        app:layout_constraintLeft_toLeftOf="@+id/generate_left"
        app:layout_constraintRight_toRightOf="@+id/generate_right"
        app:layout_constraintBottom_toBottomOf="@+id/generate_bottom"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generateall_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generateall_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generateall_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.32"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/generateall_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.68"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_click_color"
        android:text="Generate All"
        android:textSize="22sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/generateall_top"
        app:layout_constraintLeft_toLeftOf="@+id/generateall_left"
        app:layout_constraintRight_toRightOf="@+id/generateall_right"
        app:layout_constraintBottom_toBottomOf="@+id/generateall_bottom"/>

</androidx.constraintlayout.widget.ConstraintLayout>